        }
        .asked{
            align-items: center;
            text-align: center;
            overflow:scroll;
        }
        .fill{
            text-align: center;
            margin-top: 20px;
            /* margin-bottom:50px; */
            background-color: #7F9F80;
            position: fixed;
            overflow: hidden;
            bottom:0;
            width: 100%;
        }
        .filler{
            height:20px;
        }
        .inp{
            width:75%;
            height:35px;
            border-radius: 8px;
        }
        .name{
            font-size: 25px;
            /* color: #EEEEEE; */
        }
        .broski{
            border-radius: 8px;
            width:100px;
        }
        .box{
            background-color: #222831;
            /* border-radius:2%; */
        }
    </style>
</head>
<body>
    <div>
        <h1 class="title">Question and answer</h1>
    </div>
    <div class="box">
        
            <div class="asked">
                <% (locals.result).forEach((item) =>{ %>
                    <div class="question"><%= item.quest %></div>
                    <div class="answer"><%= item.ans %></div> 
                <% }) %>
            </div>
            <div class="filler">

            </div>
            <div class="fill">
                <form class="bro" method="post" action="/quest/<%= locals.fileName %>">
                    <!-- <label class="name">Question</label> -->
                    <input type="text" name="quest" class="inp" placeholder="Ask your Question" required>
                    <button type="submit" class="broski">Go</button>   
                </form>
            </div>
        
    </div>
